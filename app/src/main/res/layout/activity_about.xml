<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/studentPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:background="#E0E0E0"
            android:contentDescription="Foto do Estudante" />

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Otavio Furlan Silva"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentRA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="RA: 09046335"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/studentCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Curso: Sistemas de Informação"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/appInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicativo desenvolvido para a disciplina de Programação de Dispositivos Móveis - UNIPAR EAD"
            android:textSize="16sp"
            android:textAlignment="center" />

    </LinearLayout>

</ScrollView>